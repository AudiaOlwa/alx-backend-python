pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AudiaOlwa/alx_travel_app_0x02.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh """
                cd messaging_app
                pip3 install --upgrade pip
                pip3 install -r requirements.txt
                """
            }
        }

        stage('Run tests') {
            steps {
                sh """
                cd messaging_app
                pytest --junitxml=pytest-report.xml
                """
            }
        }
    }

    post {
        always {
            junit 'messaging_app/pytest-report.xml'
        }
    }
}
